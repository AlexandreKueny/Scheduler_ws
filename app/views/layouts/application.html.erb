<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Scheduler</title>
  <%= action_cable_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag "application-print", :media => "print" %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <% if Rails.env == 'production' %>
      <script>
        (function (i, s, o, g, r, a, m) {
          i['GoogleAnalyticsObject'] = r;
          i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
              }, i[r].l = 1 * new Date();
          a = s.createElement(o),
              m = s.getElementsByTagName(o)[0];
          a.async = 1;
          a.src = g;
          m.parentNode.insertBefore(a, m)
        })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-74101325-2', 'auto');
        ga('send', 'pageview');

      </script>
  <% end %>
</head>
<body>
<div id="wrap">
  <%= render 'pages/topbar' %>

  <div id="alert">
    <div class="container">
      <% flash.each do |key, value| %>
          <div class="alert alert-<%= key %>">
            <%= value %>
          </div>
      <% end %>
    </div>
  </div>

  <div id="top">
    <%= yield :top_content %>
  </div>

  <div id="header">
    <div class="container">
      <%= yield :header %>
    </div>
  </div>

  <div id="body">
    <div class="container">
      <%= yield %>
      <div id="remote"></div>
    </div>
  </div>
</div>

<div id="footer">
  <div class="container">
    <p class="text-muted">Created by Alexandre Kueny</p>
  </div>
</div>

</body>
</html>
