<div class="modal" id="edit-chat_room">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Edit Chat</h4>
      </div>
      <div class="modal-body">
        <input type="text" class="form-control typeahead" placeholder="Search user" id="add-user" autocomplete="off">
        <hr>
        <ul class="list-group" id="users-list">
          <%= render partial: 'user-line', collection: @chat_room.users.not(current_user), as: :user %>
        </ul>
      </div>
      <div class="modal-footer" id="users-modal-footer">
        <span class="pull-left" id="error-text" style="display: none; color: red; margin-top: 6px">At least 1 user</span>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button class="btn btn-success" id="validate-edit-chat_room-btn">OK</button>
      </div>
    </div>
  </div>
</div>