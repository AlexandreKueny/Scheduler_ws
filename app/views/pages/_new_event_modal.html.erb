<div id="new-event-modal" class="modal" role="dialog" data-keyboard="false" data-backdrop="static">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <div class="modal-title">New Event</div>
      </div>
      <div class="modal-body">
        <%= form_for(event, url: '/users/' + current_user.id + '/events', remote: true, html: {method: :post}) do |f| %>

            <div class="form-group">
              <%= f.label :Title %>
              <%= f.text_field :title, class: 'form-control', placeholder: 'Title' %>
            </div>

            <div class="form-group">
              <%= f.label :Description %>
              <%= f.text_area :description, class: 'form-control', placeholder: 'Description' %>
            </div>

            <div class="form-group">
              <%= f.label :All_day_? %>
              <%= f.check_box :allDay, id: 'allDay-checkbox' %>
            </div>

            <div class="form-group">
              <%= f.label :Start %>
              <%= f.text_field :start, class: 'form-control', id: 'datetimepicker1' %>
            </div>

            <div class="form-group">
              <%= f.label :End %>
              <%= f.text_field :end, class: 'form-control', id: 'datetimepicker2' %>
            </div>

            <div class="form-group">
              <%= f.label :Color %>
              <%= f.select :color, options_for_select([['Default', nil], ['Blue', 'blue'], ['Red', 'red'], ['Black', 'black']]) %>
            </div>

            <div class="form-group">
              <%= f.label :Can_overlap_? %>
              <%= f.check_box :overlap %>
            </div>

            <div class="form-group">
              <%= f.label :allow_edit_duration %>
              <%= f.check_box :durationEditable %>
            </div>

            <div class="form-group">
              <%= f.label :allow_move_event %>
              <%= f.check_box :startEditable %>
            </div>

            <%= f.submit 'send', class: 'btn btn-primary', style: 'display: none', id: 'submit-new-event'%>

        <% end %>
      </div>
      <div class="modal-footer" id="users-modal-footer">
        <span class="pull-left" id="error-text" style="display: none; color: red; margin-top: 6px">At least 1 user</span>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button class="btn btn-success" id="create-new-event-btn">OK</button>
      </div>
    </div>
  </div>
</div>