<nav class="navbar navbar-inverse" id="navbar">
  <div class="container">
    <div class="navbar-header">
      <%= link_to 'Scheduler', root_path, class: 'navbar-brand' %>
    </div>
    <div id="navbar">
      <ul class="nav navbar-nav">
        <% if user_signed_in? %>
            <li>
              <%= link_to planning_path do %>
                  <span class="glyphicon glyphicon-calendar"></span>
                  <span>My Planning</span>
              <% end %>
            </li>
            <li>
              <%= link_to collaborators_path do %>
                  <span class="glyphicon glyphicon-globe"></span>
                  <span>My Collaborators</span>
              <% end %>
            </li>
        <% end %>
      </ul>
      <ul class="nav navbar-nav pull-right">
        <% if user_signed_in? %>
            <form class="navbar-form navbar-left search" role="search">
              <span class="glyphicon glyphicon-search"></span>
              <input type="text" class="form-control typeahead search_box" placeholder="Search user" id="searchBar">
            </form>
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown">
                <span class="glyphicon glyphicon-user"></span>
                <%= current_user.first_name.capitalize %>
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu" role="menu">
                <li>
                  <%= link_to user_chat_rooms_path current_user do %>
                      <span>Chat</span>
                      <span class="glyphicon glyphicon-envelope pull-right"></span>
                  <% end %>
                </li>
                <li>
                  <%= link_to edit_user_registration_path do %>
                      <span>Profile</span>
                      <span class="glyphicon glyphicon-edit pull-right"></span>
                  <% end %>
                </li>
                <li role="separator" class="divider"></li>
                <li>
                  <%= link_to destroy_user_session_path, method: :delete do %>
                      <span>Log out</span>
                      <span class="glyphicon glyphicon-log-out pull-right"></span>
                  <% end %>
                </li>
              </ul>
            </li>
        <% else %>
            <li><%= link_to 'Log In', new_user_session_path %></li>
            <li><%= link_to 'Sign Up', new_user_registration_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>